# HyperDAGManager Infrastructure - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# ==============================================================================
# CORE APPLICATION
# ==============================================================================
NODE_ENV=development
APP_URL=http://localhost:5000
PORT=5000

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/trinity_symphony
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=trinity_symphony

# ==============================================================================
# SESSION MANAGEMENT
# ==============================================================================
SESSION_SECRET=generate_a_random_64_character_string_here

# ==============================================================================
# REPLIT OBJECT STORAGE (if using)
# ==============================================================================
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PUBLIC_OBJECT_SEARCH_PATHS=/public
PRIVATE_OBJECT_DIR=/.private

# ==============================================================================
# AI PROVIDERS (Optional - for Trinity Symphony coordination)
# ==============================================================================
# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini
VITE_GEMINI_API_KEY=your_gemini_key

# ==============================================================================
# BLOCKCHAIN INFRASTRUCTURE (Optional)
# ==============================================================================
# Alchemy
ALCHEMY_API_KEY=your_alchemy_key

# ==============================================================================
# EMAIL SERVICES (Optional)
# ==============================================================================
# Mailgun
MAILGUN_API_KEY=your_mailgun_key
MAILGUN_DOMAIN=your_mailgun_domain

# ==============================================================================
# EXTERNAL SERVICES (Optional)
# ==============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_...
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# GitHub
GITHUB_TOKEN=ghp_...

# ==============================================================================
# CACHING & COORDINATION (Optional)
# ==============================================================================
# DragonflyDB Cloud
DRAGONFLY_CONDUCTOR_URL=redis://...
DRAGONFLY_LEARNER_URL=redis://...
DRAGONFLY_VALIDATOR_URL=redis://...
DRAGONFLY_FALLBACK_URL=redis://...

# Supabase
SUPABASE_URL=https://...
SUPABASE_ANON_KEY=your_anon_key

# ==============================================================================
# ANALYTICS (Optional)
# ==============================================================================
VITE_GA_MEASUREMENT_ID=G-...

# ==============================================================================
# SECURITY NOTES
# ==============================================================================
# 1. NEVER commit this file with real values
# 2. Use strong, random values for secrets
# 3. Rotate keys regularly
# 4. Use different keys for development/production
# 5. Keep production secrets in secure vault (Replit Secrets)
